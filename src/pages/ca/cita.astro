---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import CitaForm from "../../components/CitaForm.astro";

const alternates = {
  es: "/es/cita",
  ca: "/ca/cita",
  en: "/en/cita",
};
---

<BaseLayout
  description="Demana la teva cita a Clínica Dental Sueca. La primera valoració és gratuïta."
  locale="ca"
  {alternates}
>
  <Header locale="ca" currentPath="/ca/cita" {alternates} />

  <!-- ========================= HERO FORM ========================= -->
  <section
    class="cita-hero"
    style="--bg:url('/assets/pedir-hero.png')"
    aria-label="Formulari de cita"
  >
    <div class="cita-hero__overlay"></div>

    <div class="cita-hero__inner container">
      <div class="cita-hero__card">
        <CitaForm locale="ca" />
      </div>
    </div>
  </section>

  <Footer locale="ca" />
</BaseLayout>

<style is:global>
  .cita-hero .formc__title {
    text-align: center;
  }

  .cita-hero .formc__subtitle {
    visibility: hidden !important;
    position: relative;
    height: 3em;
    margin-bottom: 10px;
  }

  .cita-hero .formc__subtitle::after {
    content: "Aquí comença el teu camí cap a un somriure saludable i radiant.";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    visibility: visible;
    text-align: center;
    width: 90%;
    color: inherit;
  }
</style>
