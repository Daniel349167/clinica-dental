---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

/* URLs mirror: same slug across all languages (tratamientos) */
const alternates = { es: "/es/tratamientos", ca: "/ca/tratamientos", en: "/en/tratamientos" };
---

<BaseLayout
  description="Discover all our dental treatments in Barcelona."
  locale="en"
  {alternates}
>
  <Header locale="en" currentPath="/en/tratamientos" {alternates} />

  <!-- ========================= HERO TREATMENTS (EN) ========================= -->
  <section class="tr-hero" aria-label="Welcome section to Treatments">
    <div class="tr-hero__bg"></div>
    <div class="tr-hero__inner container">
      <img class="tr-hero__mark" src="/assets/mark-hero.svg" alt="" aria-hidden="true" />
      <h1 class="tr-hero__title">
        The treatment that will transform<br />
        your smile is here
      </h1>
    </div>
  </section>

  <!-- ========================= TREATMENTS - SIX CARDS ========================= -->
  <section class="tr-grid container">
    <div class="tr-grid__cards">
      <a class="tr-card" href="/en/tratamientos/ortodoncia" aria-label="See Orthodontics and aligners treatments">
        <img src="/assets/ortodoncia.svg" alt="" />
        <h3>Orthodontics & Aligners</h3>
        <p>We align your smile with modern and discreet treatments â€” from aesthetic brackets to invisible orthodontics.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/implantes" aria-label="See Dental Implants treatments">
        <img src="/assets/implante.svg" alt="" />
        <h3>Dental Implants</h3>
        <p>Restore function and aesthetics with next-generation implants. Long-lasting, natural results.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/estetica-dental" aria-label="See Cosmetic Dentistry treatments">
        <img src="/assets/estetica.svg" alt="" />
        <h3>Cosmetic Dentistry</h3>
        <p>Veneers, whitening, and smile design to enhance harmony and brightness.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/rehabilitacion-oral" aria-label="See Oral Rehabilitation treatments">
        <img src="/assets/rehabilitacion.svg" alt="" />
        <h3>Oral Rehabilitation</h3>
        <p>Comprehensive treatments combining prosthetics, implants, and other techniques to restore functionality.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/endodoncia" aria-label="See Endodontics treatments">
        <img src="/assets/endodoncia.svg" alt="" />
        <h3>Endodontics</h3>
        <p>We save damaged or infected teeth, eliminating pain and avoiding extraction.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/odontopediatria" aria-label="See Pediatric Dentistry treatments">
        <img src="/assets/odontopediatria.svg" alt="" />
        <h3>Pediatric Dentistry</h3>
        <p>We care for childrenâ€™s smiles through prevention, habit control, and early orthodontics.</p>
      </a>
    </div>
  </section>

  <!-- ========================= CTA (Free Consultation) ========================= -->
  <section class="tr-cta" aria-labelledby="tr-cta-title">
    <div class="tr-cta__inner container">
      <img class="tr-cta__mark" src="/assets/mark-hero.svg" alt="" aria-hidden="true" />
      <h2 id="tr-cta-title" class="tr-cta__title">First consultation and diagnosis free</h2>
      <a class="btn tr-cta__btn" href="/en/cita" aria-label="Book your appointment">BOOK YOUR APPOINTMENT</a>
    </div>
  </section>

  <!-- ========================= BEFORE/AFTER CASES ========================= -->
  <section class="tr-ba container">
    <h2 class="tr-ba__title">Real Before & After Cases</h2>
    <div class="ba" data-init-ba>
      <img class="ba__before" src="/assets/casos/caso1-antes.png" alt="Antes" />
      <img class="ba__after"  src="/assets/casos/caso1-despues.png" alt="DespuÃ©s" />
      <input type="range" class="ba__slider" min="0" max="100" value="50" aria-label="Comparador antes/despuÃ©s" />
      <span class="ba__handle" aria-hidden="true"></span>
    </div>
  </section>

  <Footer locale="en" />
</BaseLayout>

<script>
  // Solo â€œoptimizaciÃ³n mÃ³vilâ€ pero sin romper desktop
  const isMobile = window.matchMedia('(max-width: 640px)').matches;

  document.querySelectorAll('[data-init-ba]').forEach((ba) => {
    const slider = ba.querySelector('.ba__slider');

    // Utilidad: clamp y setter de variable CSS
    const clamp = (v, min, max) => Math.max(min, Math.min(max, v));
    const setPct = (p) => ba.style.setProperty('--ba-x', clamp(p, 0, 100) + '%');

    // âœ… Estado inicial robusto (centro)
    slider.value = 50;
    setPct(50);
    requestAnimationFrame(() => setPct(50));
    window.addEventListener('load', () => setPct(Number(slider.value) || 50), { once: true });

    // Desktop: comportamiento que ya te funciona bien
    if (!isMobile) {
      slider.addEventListener('input', (e) => setPct(e.target.value));
      ba.addEventListener('pointerdown', (ev) => {
        const rect = ba.getBoundingClientRect();
        const move = (e) => {
          const x = (e.clientX ?? e.touches?.[0]?.clientX) - rect.left;
          const pct = (x / rect.width) * 100;
          setPct(pct);
          slider.value = Math.round(pct);
        };
        move(ev);
        const up = () => {
          window.removeEventListener('pointermove', move);
          window.removeEventListener('pointerup', up);
        };
        window.addEventListener('pointermove', move);
        window.addEventListener('pointerup', up, { once: true });
      });
      return;
    }

    // ======== ðŸ”§ MÃ“VIL: firme y sin jitter ========
    let dragging = false;
    let activePointerId = null;
    let pctTarget = 50;
    let pctSmoothed = 50;
    let rafId = null;

    // Suavizado EMA: alpha mÃ¡s alto = sigue mÃ¡s â€œpegadoâ€ al dedo
    const ALPHA = 0.4; // 0.35â€“0.5 va bien; ajusta si quieres aÃºn mÃ¡s firme

    const apply = () => {
      // EMA: suaviza ruido del dedo
      pctSmoothed = pctSmoothed + ALPHA * (pctTarget - pctSmoothed);

      setPct(pctSmoothed);

      // opcional: sincroniza el input sin forzar cada pÃ­xel
      slider.value = Math.round(pctSmoothed);

      rafId = null;
    };

    const scheduleTo = (pct) => {
      pctTarget = clamp(pct, 0, 100);
      if (rafId == null) rafId = requestAnimationFrame(apply);
    };

    // En mÃ³vil: el input puede producir jitter si tambiÃ©n hacemos drag
    // => SÃ³lo usamos el input cuando NO estamos arrastrando
    slider.addEventListener('input', (e) => {
      if (!dragging) scheduleTo(Number(e.target.value));
    }, { passive: true });

    const startDrag = (ev) => {
      // Lock al dedo que inicia el gesto
      activePointerId = ev.pointerId ?? 'mouse';
      dragging = true;
      ba.classList.add('is-dragging');
      ba.setPointerCapture && ba.setPointerCapture(ev.pointerId);

      // Pre-cÃ¡lculo del rect (evita jitter por reflow)
      const rect = ba.getBoundingClientRect();

      const toPct = (clientX) => {
        const x = clamp(clientX - rect.left, 0, rect.width);
        return (x / rect.width) * 100;
      };

      // Primer frame
      scheduleTo(toPct(ev.clientX));

      const onMove = (e) => {
        // Ignora otros dedos
        if ((e.pointerId ?? 'mouse') !== activePointerId) return;
        // Evita scroll â€œpegajosoâ€ que introduce ruido
        e.preventDefault?.();
        scheduleTo(toPct(e.clientX));
      };

      const endDrag = (e) => {
        if ((e.pointerId ?? 'mouse') !== activePointerId) return;
        dragging = false;
        activePointerId = null;
        ba.classList.remove('is-dragging');
        ba.releasePointerCapture && ba.releasePointerCapture(e.pointerId);
        ba.removeEventListener('pointermove', onMove);
        ba.removeEventListener('pointerup', endDrag);
        ba.removeEventListener('pointercancel', endDrag);
      };

      // Importante: no pasivos para poder preventDefault y quitar micro scrolls
      ba.addEventListener('pointermove', onMove, { passive: false });
      ba.addEventListener('pointerup', endDrag, { once: true });
      ba.addEventListener('pointercancel', endDrag, { once: true });
    };

    // Inicia el drag
    ba.addEventListener('pointerdown', (ev) => {
      // SÃ³lo si el toque ocurre dentro de la zona visible
      ev.preventDefault?.();
      startDrag(ev);
    }, { passive: false });
  });
</script>
