---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

/* URLs mirror: same slug across all languages (tratamientos) */
const alternates = { es: "/es/tratamientos", ca: "/ca/tratamientos", en: "/en/tratamientos" };
---

<BaseLayout
  description="Discover all our dental treatments in Barcelona."
  locale="en"
  {alternates}
>
  <Header locale="en" currentPath="/en/tratamientos" {alternates} />

  <!-- ========================= HERO TREATMENTS (EN) ========================= -->
  <section class="tr-hero" aria-label="Welcome section to Treatments">
    <div class="tr-hero__bg"></div>
    <div class="tr-hero__inner container">
      <img class="tr-hero__mark" src="/assets/mark-hero.svg" alt="" aria-hidden="true" />
      <h1 class="tr-hero__title">
        The treatment that will transform<br />
        your smile is here
      </h1>
    </div>
  </section>

  <!-- ========================= TREATMENTS - SIX CARDS ========================= -->
  <section class="tr-grid container">
    <div class="tr-grid__cards">
      <a class="tr-card" href="/en/tratamientos/ortodoncia" aria-label="See Orthodontics and aligners treatments">
        <img src="/assets/ortodoncia.svg" alt="" />
        <h3>Orthodontics & Aligners</h3>
        <p>We align your smile with modern and discreet treatments — from aesthetic brackets to invisible orthodontics.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/implantes" aria-label="See Dental Implants treatments">
        <img src="/assets/implante.svg" alt="" />
        <h3>Dental Implants</h3>
        <p>Restore function and aesthetics with next-generation implants. Long-lasting, natural results.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/estetica-dental" aria-label="See Cosmetic Dentistry treatments">
        <img src="/assets/estetica.svg" alt="" />
        <h3>Cosmetic Dentistry</h3>
        <p>Veneers, whitening, and smile design to enhance harmony and brightness.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/rehabilitacion-oral" aria-label="See Oral Rehabilitation treatments">
        <img src="/assets/rehabilitacion.svg" alt="" />
        <h3>Oral Rehabilitation</h3>
        <p>Comprehensive treatments combining prosthetics, implants, and other techniques to restore functionality.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/endodoncia" aria-label="See Endodontics treatments">
        <img src="/assets/endodoncia.svg" alt="" />
        <h3>Endodontics</h3>
        <p>We save damaged or infected teeth, eliminating pain and avoiding extraction.</p>
      </a>

      <a class="tr-card" href="/en/tratamientos/odontopediatria" aria-label="See Pediatric Dentistry treatments">
        <img src="/assets/odontopediatria.svg" alt="" />
        <h3>Pediatric Dentistry</h3>
        <p>We care for children’s smiles through prevention, habit control, and early orthodontics.</p>
      </a>
    </div>
  </section>

  <!-- ========================= CTA (Free Consultation) ========================= -->
  <section class="tr-cta" aria-labelledby="tr-cta-title">
    <div class="tr-cta__inner container">
      <img class="tr-cta__mark" src="/assets/mark-hero.svg" alt="" aria-hidden="true" />
      <h2 id="tr-cta-title" class="tr-cta__title">First consultation and diagnosis free</h2>
      <a class="btn tr-cta__btn" href="/en/cita" aria-label="Book your appointment">BOOK YOUR APPOINTMENT</a>
    </div>
  </section>

  <!-- ========================= BEFORE/AFTER CASES ========================= -->
  <section class="tr-ba container">
    <h2 class="tr-ba__title">Real Before & After Cases</h2>
    <div class="ba" data-init-ba>
      <img class="ba__before" src="/assets/casos/caso1-antes.png" alt="Antes" />
      <img class="ba__after"  src="/assets/casos/caso1-despues.png" alt="Después" />
      <input type="range" class="ba__slider" min="0" max="100" value="50" aria-label="Comparador antes/después" />
      <span class="ba__handle" aria-hidden="true"></span>
    </div>
  </section>

  <Footer locale="en" />
</BaseLayout>

<script>
  // Inicializa todos los comparadores de la página (a futuro si agregas más)
  document.querySelectorAll('[data-init-ba]').forEach((ba) => {
    const slider = ba.querySelector('.ba__slider');
    const update = (v) => {
      const pct = Math.max(0, Math.min(100, Number(v)||0));
      ba.style.setProperty('--ba-x', pct + '%');
    };
    // Estado inicial
    update(slider.value);
    // En vivo
    slider.addEventListener('input', (e) => update(e.target.value));
    // Drag sobre toda el área (opcional pero se siente mejor)
    ba.addEventListener('pointerdown', (ev) => {
      const rect = ba.getBoundingClientRect();
      const move = (e) => {
        const x = (e.clientX ?? e.touches?.[0]?.clientX) - rect.left;
        update((x / rect.width) * 100);
        slider.value = Math.round((x / rect.width) * 100);
      };
      move(ev);
      const up = () => {
        window.removeEventListener('pointermove', move);
        window.removeEventListener('pointerup', up);
      };
      window.addEventListener('pointermove', move);
      window.addEventListener('pointerup', up, { once: true });
    });
  });
</script>

