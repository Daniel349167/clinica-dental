        method="post"
        novalidate
        data-sending="Enviando…"
        data-ok="¡Listo! Te hemos suscrito. Pronto recibirás noticias dentales recientes."
        data-fail="No pudimos suscribirte. Inténtalo de nuevo."
      >
        <input type="hidden" id="nl_locale" value="es" />

